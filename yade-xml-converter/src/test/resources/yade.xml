<?xml version="1.0" encoding="UTF-8"?>
<Configurations>
    <Fragments>
        <ProtocolFragments>
            <SFTPFragment name="server">
                <BasicConnection>
                    <Hostname>
                        <![CDATA[host]]>
                    </Hostname>
                </BasicConnection>
                <SSHAuthentication>
                    <Account>
                        <![CDATA[account]]>
                    </Account>
                    <AuthenticationMethodPassword>
                        <Password>
                            <![CDATA[passwort]]>
                        </Password>
                    </AuthenticationMethodPassword>
                </SSHAuthentication>
            </SFTPFragment>
        </ProtocolFragments>
    </Fragments>
    <Profiles>
        <Profile profile_id="server">
            <Operation>
                <Copy>
                    <CopySource>
                        <CopySourceFragmentRef>
                            <LocalSource/>
                        </CopySourceFragmentRef>
                        <SourceFileOptions>
                            <Selection>
                                <FileSpecSelection>
                                    <FileSpec>
                                        <![CDATA[.*]]>
                                    </FileSpec>
                                    <Directory>
                                        <![CDATA[/tmp/polling]]>
                                    </Directory>
                                </FileSpecSelection>
                            </Selection>
                            <Directives>
                                <DisableErrorOnNoFilesFound>
                                    <![CDATA[true]]>
                                </DisableErrorOnNoFilesFound>
                            </Directives>
                            <Polling>
                                <PollInterval>60</PollInterval>
                                <MinFiles>
                                    <![CDATA[1]]>
                                </MinFiles>
                                <PollingServer>
                                    <![CDATA[true]]>
                                </PollingServer>
                                <PollForever>
                                    <![CDATA[true]]>
                                </PollForever>
                            </Polling>
                        </SourceFileOptions>
                    </CopySource>
                    <CopyTarget>
                        <CopyTargetFragmentRef>
                            <SFTPFragmentRef ref="server"/>
                        </CopyTargetFragmentRef>
                        <Directory>
                            <![CDATA[/home/test/in]]>
                        </Directory>
                        <TargetFileOptions>
                            <DisableOverwriteFiles>
                                <![CDATA[false]]>
                            </DisableOverwriteFiles>
                        </TargetFileOptions>
                    </CopyTarget>
                </Copy>
            </Operation>
        </Profile>
    </Profiles>
</Configurations>